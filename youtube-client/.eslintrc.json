{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "airbnb-typescript/base"
      ],
      "rules": {
        "class-methods-use-this": "warn", // TODO: Delete in the future
        "@angular-eslint/no-empty-lifecycle-method": "warn", // TODO: Delete in the future
        "@typescript-eslint/no-empty-function": "warn", // TODO: Delete in the future
        "@typescript-eslint/no-useless-constructor": "warn", // TODO: Delete in the future
        "import/prefer-default-export": "off",
        "max-len": [
          "error",
          {
            "code": 140
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {
        "max-len": [
          "error",
          {
            "code": 140
          }
        ]
      }
    }
  ]
}
